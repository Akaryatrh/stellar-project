                .arrow
                    position absolute
                    width 67px
                    height 112px
                    background url('../images/arrows.png') no-repeat left top
                    left 5%
                    text-indent -9999px
                    cursor pointer

                    &:hover
                        background-position left bottom

                    &.right
                        right 5%
                        left auto
                        background-position right top

                        &:hover
